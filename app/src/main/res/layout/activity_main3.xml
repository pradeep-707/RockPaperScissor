<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pastel"
    tools:context=".Main3Activity">

    <TextView
        android:id="@+id/textView15"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER\nDETAILS"
        android:textColor="#BD3161"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/textView16"
        android:textStyle="bold"
        android:layout_marginBottom="70dp"/>

    <TextView
        android:id="@+id/textView16"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Number of\nRounds"
        android:textColor="#0A1A71"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText4"
        android:layout_below="@id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter number here"
        android:inputType="number" />

    <Button
        android:id="@+id/button7"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editText4"
        android:layout_marginTop="30dp"
        android:layout_width="252dp"
        android:layout_height="67dp"
        android:background="#B53F67"
        android:text="START"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/p"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_above="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/r"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/s"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button8"
        android:visibility="invisible"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:background="#CD698B"
        android:text="NEXT "
        android:layout_below="@id/imageView10"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/button9"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#98A60E"
        android:text="RESTART"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView17"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="SELECT !!"
        android:textColor="#9A385A"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/imageView2"/>

    <TextView
        android:id="@+id/textView18"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#F1BDCE"
        android:text="Your score"
        android:textColor="#8A113A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#F1BDCE"
        android:text="Computer's Score"
        android:textColor="#8A113A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView20"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView19"
        android:layout_alignParentRight="true"
        android:layout_marginRight="80dp"
        android:text="0"
        android:textColor="#130E0E"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView18"
        android:layout_marginLeft="50dp"
        android:text="0"
        android:textColor="#171414"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="TextView"
        android:textColor="#0D6873"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textView23"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPUTER\nCHOSE"
        android:textColor="#9C204A"
        android:visibility="invisible"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView23"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
         />
</RelativeLayout>